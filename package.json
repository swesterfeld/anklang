{
  "name": "Anklang",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "exec run-p sound-engine monitor",
    "sound-engine": "exec out/lib/AnklangSynthEngine --log2file $ASEOPT",
    "monitor": "exec nodemon --ext '*' --watch ui/ --delay 370ms --on-change-only --exec 'npm run -s ui/rebuild' --exitcrash",
